                                <td>@Html.TextBox("PreviousStatus", null, new { @readonly = "readonly" })</td>
                                <td>@Html.TextBox("Percent")</td>
                                <td>@Html.TextBox("PresentStatus")</td>
                                <td>@Html.TextBox("Remarks")</td>
                            </tr>
                        </table>
                       

                    </div>





                    <div class="form-group">
                        <div class="col-md-offset-5 col-md-10">
                            <button type="submit" onclick='CreateProject();' class="btn btn-primary"><i class=" icon-add position-left"></i>  Save</button>
                        </div>
                    </div>
                }


            </div>
        </div>
    </div>
</div>

