@model IEnumerable<AuditReport.Models.ProjectTask>

@{
    ViewBag.Title = "ProjectTaskList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.ExistNotDeletedItem == true)
{
      
    <div class="alert alert-warning">
        <p>Following items cannot be deleted. Item(s) exist in Site Plan.</p>
    
        <ul>
            @foreach (var item in ViewBag.NotDeletedItem)
            {
            <li>@item</li>
            }
        </ul>
    </div>
    
}

<div class="panel panel-flat">
    <div class="panel-heading">
        <h5 class="panel-title"><i class=" icon-stack3 position-left"></i>Project Task List</h5><hr />
        <div class="heading-elements">
            <ul class="icons-list">
                <li><a data-action="collapse"></a></li>
                <li><a data-action="reload"></a></li>
            </ul>
        </div>
    </div>

    <div class="table-responsive">
@using (Html.BeginForm("RemoveProjectTask", "ProjectSitePlanTasks",FormMethod.Post))
{
        <table class="table table-xxs" id="myTable">
            <tr class="bg-blue">

                <th>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="myCheckAll">All
                        </label>
                    </div>                
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th><input type="submit" class="btn btn-xs btn-danger" value="Delete" onclick="return CheckDeleteValidation()" />  </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" class="cbCheck" name="TaskId" id="TaskId" value="@item.Id" />
                    </td>
                    <td>

                        
                        @item.Name.ToString()
                    </td>
                    <td>
                        <button type="button" class="btn btn-xs btn-link" data-toggle="modal" data-target="#editModal" onclick="editTask(@item.Id,'@item.Name.ToString()') "><i class="text-info icon-pencil4"></i></button>

                    </td>
                </tr>
            }

        </table>
}
    </div>
</div>



   





<!-- Modal -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h5 class="modal-title" id="exampleModalLabel">Edit Task</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Html.Hidden("mdTaskId")
                @Html.TextBox("mdTaskName", null, new { @class = "form-control" })
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" id="editButton" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    $("#editButton").click(function(e) {
        e.preventDefault();
        $.ajax({
            type: "POST",
            url: "/ProjectSitePlanTasks/editTask/",
            data: {
                id: $("#mdTaskId").val(), // < note use of 'this' here
                name: $("#mdTaskName").val()
            },
            success: function(result) {
                window.location = "/ProjectTask/Index";
                alert('Save change record successfully !');

            },
            error: function(result) {
                alert('error');
            }
        });
    });

    function editTask(Id,Name)
    {
        $("#editModal #mdTaskId").val(Id);
        $("#editModal #mdTaskName").val(Name);
    }

    function CheckDeleteValidation()
    {

        if ($(":checkbox:checked").length > 0)
        {
            return true
        }
        else
        {
            alert('You have not selected any item.');            
        }

        return false;
    }



    $("#myCheckAll").click(function () {
        $(".cbCheck").prop('checked', $(this).prop('checked'));
    });
    $(".cbCheck").change(function () {
        if (!$(this).prop("checked")) {
            $("#myCheckAll").prop("checked", false);
        }
    });

</script>