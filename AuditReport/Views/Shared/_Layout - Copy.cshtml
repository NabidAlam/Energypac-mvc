        //$(document).ready(function () {

        //    setTimeout(function () {
        //        $(".alert").hide();
        //    }, 10000);


        //});

        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>










    @RenderSection("scripts", required: false)
</body>
</html>
